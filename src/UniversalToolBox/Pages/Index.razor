        <MudLink Href="/random-token" Underline="Underline.None">
            <MudPaper Elevation="0">
                <MudCard Style="height: 150px;">
                    <MudCardContent>
                        <MudText Typo="Typo.h6">随机密码生成</MudText>
                        <MudText Typo="Typo.body2">随机生成密码，可选择包含：大写或小写字母、数字和或符号。</MudText>
                    </MudCardContent>
                </MudCard>
            </MudPaper>
        </MudLink>
    </MudItem>
